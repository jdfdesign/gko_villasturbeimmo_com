<%# cache [action_name, I18n.locale, resource.site, resource] do %>
	<% @page = resource ? resource : site.home %>
	<% image_source = resource && resource.images.any? ?  resource : site.home %>

	<%= render_slideshow_for(image_source, :plugin => "flexslider") %>
	<% if @page.body.present? %>
	<div class="content-wrapper">
		<div id='content-tab'><i class="icon-chevron-right icon-white"></i></div>
		<div class="content-inner">
			<%= render_page_title(@page.title) %>
			<%= render_html_text(@page.body) %>
		</div>
	</div>
	<% end %>
<%# end %>